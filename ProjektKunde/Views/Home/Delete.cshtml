@{
    ViewBag.Title = "Delete Project";
}

@model Project

<div class="container text-center">
    <h1>Projekt löschen: @Model.Title</h1>
    <h5>Company: @Model.Customer?.Company</h5>
    <div class="mb-4">
        <p>@Model.Description</p>
    </div>
    <div class="mt-auto d-flex gap-2 justify-content-center">
        <a asp-action="Index" class="btn btn-primary">Zurück</a>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Löschen" class="btn btn-danger" />
        </form>
    </div>
</div>