@{
    ViewBag.Title = "Delete Article";
}

@model Article

<div class="container text-center">
    <h1>Artikel löschen: @Model.Headline</h1>
    <h5>Autor: @Model.Author?.Fullname</h5>
    <h5>erstellt am @Model.CreatedAt.ToShortDateString()</h5>
    <div class="mb-4">
        <p>@Model.Content</p>
    </div>
    <div class="mt-auto d-flex gap-2 justify-content-center">
        <a asp-action="Index" class="btn btn-primary">Zurück</a>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Löschen" class="btn btn-danger" />
        </form>
    </div>
</div>