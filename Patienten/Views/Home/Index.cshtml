@{
    ViewBag.Title = "Home";
}

@model IEnumerable<Termin>

<body>
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mt-5">
        <h1 class="m-0">Termin-Ãœbersicht</h1>
        <a class="btn btn-primary" asp-action="">Neuer Termin</a>
    </div>
    <hr/>
    <table class="table text-center align-middle">
        <tr>
            <th>Termin ID</th>
            <th>Arzt</th>
            <th>Patient</th>
            <th>Datum</th>
            <th>Wahrgenommen</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        @foreach (var termin in Model)
        {
            <tr>
                <td>@termin.Id</td>
                <td>@termin.Arzt?.Fullname</td>
                <td>@termin.Patient?.Fullname</td>
                <td>@termin.TerminZeit.ToShortDateString()</td>
                <td>@(termin.Wahrgenommen ? "Ja" : "Nein")</td>
                <td><a class="btn btn-success" asp-action="">Edit</a></td>
                <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@termin.Id">X</a></td>
            </tr>
        }
    </table>
</div>
</body>