@{
    ViewBag.Title = "Termin bearbeiten";
}

@model Termin

<div class="mt-4">
    <h1 class="mt-5">Termin bearbeiten</h1>
    <hr/>
    <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
        <table class="table text-center align-middle">
            <tr>
                <th>Termin ID</th>
                <th>Arzt</th>
                <th>Patient</th>
                <th>Datum</th>
                <th>Wahrgenommen</th>
            </tr>
            <tr>
                <td>@Model.Id</td>
                <td>
                    <select asp-for="Arzt" class="form-select" asp-items="@ViewBag.Aerzte"></select>
                </td>
                <td>
                    <select asp-for="Patient" class="form-select" asp-items="@ViewBag.Patienten"></select>
                </td>
                <td>
                    <input asp-for="TerminZeit" type="datetime-local" class="form-control">
                </td>
                <td>
                    <input asp-for="Wahrgenommen" type="checkbox" class="form-check-input">
                </td>
            </tr>
        </table>
        <div class="mt-auto d-flex gap-2 justify-content-center">
            <a class="btn btn-danger" asp-action="Index">Zur√ºck</a>
            <button type="submit" class="btn btn-success">Speichern</button>
        </div>
    </form>
</div>